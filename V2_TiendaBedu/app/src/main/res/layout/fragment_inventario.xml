<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="30dip"
    android:id="@+id/formStock"
    android:orientation="vertical">

    <EditText
        android:id="@+id/txtProductName"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:hint="Nombre del producto"
        android:importantForAutofill="no"
        android:inputType="text" />

    <EditText
        android:id="@+id/txtProductDesc"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:hint="Descripción producto"
        android:importantForAutofill="no"
        android:inputType="text" />

    <EditText
        android:id="@+id/txtProductModel"
        android:layout_marginTop="15dip"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:hint="Modelo del producto"
        android:importantForAutofill="no"
        android:inputType="textEmailAddress" />

    <Spinner
        android:id="@+id/static_spinner"
        android:layout_width="match_parent"
        android:contentDescription="Descripción del spinner"
        android:layout_height="50dip"
        android:layout_marginTop="15dip"
        android:layout_marginBottom="30dip" />

    <EditText
        android:id="@+id/txtSerieNumber"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:hint="Número serie"
        android:importantForAutofill="no"
        android:enabled="false"
        android:layout_marginTop="15dip"
        android:layout_marginBottom="30dip" />

    <EditText
        android:id="@+id/txtProductPrice"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:hint="Precio del producto"
        android:importantForAutofill="no"
        android:layout_marginTop="15dip"
        android:layout_marginBottom="30dip" />

    <EditText
        android:id="@+id/txtStockcProduct"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:hint="Cantidad dle producro"
        android:importantForAutofill="no"
        android:layout_marginTop="15dip"
        android:layout_marginBottom="30dip" />


    <Button
        android:id="@+id/btnRegister"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/logging"
        android:enabled="false"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="15dip"
        android:paddingRight="15dip" />

    <TextView android:id="@+id/stock_error"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dip"
        android:layout_marginBottom="40dip"

        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#0b84aa"/>


</LinearLayout>